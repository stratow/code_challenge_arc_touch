<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".detail.MovieDetail"
    tools:showIn="@layout/activity_movie_detail">

    <ScrollView
        android:id="@+id/scrollParent"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/movie_detail_scroll_view_bottom_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backdropImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_image_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/movie_detail_item_cardview_margin"
                android:layout_marginEnd="@dimen/movie_detail_item_cardview_margin"
                android:layout_marginStart="@dimen/movie_detail_item_cardview_margin"
                android:layout_marginTop="@dimen/movie_detail_item_cardview_margin"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@id/backdropImageView"
                app:cardCornerRadius="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/posterImageView"
                        android:layout_width="@dimen/movie_item_poster_height"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_image_placeholder"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/movie_item_internal_margin"
                        android:layout_marginTop="@dimen/movie_item_internal_margin"
                        app:layout_constraintStart_toEndOf="@id/posterImageView"
                        app:layout_constraintTop_toTopOf="@id/posterImageView"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="@dimen/movie_title_size"
                        android:textStyle="bold"
                        tools:text="Titanic" />

                    <TextView
                        android:id="@+id/genresTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleTextView"
                        android:layout_marginStart="@dimen/movie_item_internal_margin"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="@dimen/movie_genres_size"
                        app:layout_constraintStart_toEndOf="@id/posterImageView"
                        app:layout_constraintTop_toBottomOf="@id/titleTextView"
                        tools:text="Drama, Romance, Thriller" />

                    <TextView
                        android:id="@+id/releaseDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/movie_item_internal_margin"
                        app:layout_constraintStart_toEndOf="@id/posterImageView"
                        app:layout_constraintTop_toBottomOf="@id/genresTextView"
                        android:textSize="@dimen/movie_release_date_size"
                        android:textStyle="italic"
                        tools:text="19/12/1997" />


                    <TextView
                        android:id="@+id/overviewTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/movie_detail_item_overview_margin"
                        android:layout_marginBottom="@dimen/movie_detail_item_overview_margin"
                        android:layout_marginStart="@dimen/movie_detail_item_overview_margin"
                        android:layout_marginEnd="@dimen/movie_detail_item_overview_margin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/posterImageView"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="@dimen/movie_overview_size"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:textAlignment="textStart"
                        tools:text="this is gonna be a very long description so it has to work correctly even when it is shorter or longer" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
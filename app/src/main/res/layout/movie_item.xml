<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/movie_item_height"
    android:layout_marginBottom="@dimen/movie_item_margin_vertical"
    android:layout_marginEnd="@dimen/movie_item_margin_horizontal"
    android:layout_marginStart="@dimen/movie_item_margin_horizontal"
    android:layout_marginTop="@dimen/movie_item_margin_vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/posterImageView"
            android:layout_width="@dimen/movie_item_poster_height"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_image_placeholder" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/movie_item_internal_margin"
            android:layout_marginTop="@dimen/movie_item_internal_margin"
            android:layout_toEndOf="@id/posterImageView"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/movie_title_size"
            android:textStyle="bold"
            tools:text="Titanic" />

        <TextView
            android:id="@+id/genresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:layout_marginStart="@dimen/movie_item_internal_margin"
            android:layout_toEndOf="@id/posterImageView"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/movie_genres_size"
            tools:text="Drama, Romance, Thriller" />

        <TextView
            android:id="@+id/releaseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/movie_item_internal_margin"
            android:layout_marginStart="@dimen/movie_item_internal_margin"
            android:layout_toEndOf="@id/posterImageView"
            android:textSize="@dimen/movie_release_date_size"
            android:textStyle="italic"
            tools:text="19/12/1997" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
